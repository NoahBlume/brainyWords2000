<script>
    let dragging = false;
     const audio = new Audio();

    function setDrag() {
        dragging = true;
    }

    function clearDrag() {
        dragging = false;
    }

    function playAudio(soundName) {
        if (dragging === true) {
            dragging = false;
        } else {
            if (!audio.paused){
               audio.pause();
            }
            audio.src = '/audio/street/' + soundName;
            audio.play();    
        }
    }
</script>