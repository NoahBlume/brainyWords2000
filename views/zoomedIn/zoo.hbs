        style="height: 451px; width: 424px; top: 448px; left: 674px;" 
        onmouseup="selectCategory('Animals'); " onmousedown="clearDrag();" onmousemove="setDrag();">
    </div>
</div>

<script>
    let dragging = false;
    const audio = new Audio();

    function setDrag() {
        dragging = true;
    }

    function clearDrag() {
        dragging = false;
    }

    function playAudio(soundName) {
        if (dragging === true) {
            dragging = false;
            // header.style.color = "red";
        } else {
            //const audio = new Audio();
            if (!audio.paused){
                audio.pause();
            }
            audio.src = '/audio/categories/' + soundName;
            audio.play();
        }
    }

    function zoomInwithAudio(areaName, soundName) {
        if (dragging === true) {
            dragging = false;
            // header.style.color = "red";
        } else {
            if (!audio.paused){
                audio.pause();
            }
            audio.src = '/audio/categories/18/' + soundName;

            audio.addEventListener("ended", function(){
                location.href= '/street/18/zoo/' + areaName;
            });

            audio.play();
        }
    }
    function selectCategory(categoryName) {
        if (dragging === true) {
            dragging = false;
        } else {
            if (!audio.paused){
                audio.pause();
            }
            audio.src = '/audio/categories/18/' + categoryName + '.mp3';

            audio.addEventListener("ended", function(){
                location.href= '/street/18/zoo/category/' + categoryName;
            });

            audio.play();
        }
    }
</script>