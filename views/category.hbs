<script>
    const audio = new Audio();
    function select(subcategory) {
        if (!audio.paused){
            audio.pause();
        }
        audio.src = '/audio/categories/' + subcategory + '.mp3';

        audio.addEventListener("ended", function () {
            document.location.href = '/category/' + subcategory;
        });

        audio.play();
    }
</script>